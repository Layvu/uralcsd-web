{
  "kind": "collectionType",
  "collectionName": "performances",
  "info": {
    "singularName": "performance",
    "pluralName": "performances",
    "displayName": "Performance",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "ageLimit": {
      "type": "integer",
      "min": 0,
      "max": 99
    },
    "description": {
      "type": "richtext"
    },
    "teaser": {
      "type": "text"
    },
    "duration": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "performanceCasts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::performance-cast.performance-cast",
      "mappedBy": "performance"
    },
    "dramatist": {
      "type": "string"
    },
    "directors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::member.member",
      "inversedBy": "aPerformances"
    },
    "additionalInfo": {
      "type": "string"
    },
    "intermissionInfo": {
      "type": "string",
      "default": "без антракта"
    },
    "choreographers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::member.member",
      "inversedBy": "choreographedPerformances"
    },
    "isPremiere": {
      "type": "boolean",
      "default": false
    }
  }
}
